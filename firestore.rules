rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /articles/{articleId} {
      // 1) 누구나 읽기 가능
      allow read: if true;

      // 2) 작성: 인증된(익명 제외) 사용자만, authorId = 본인 uid
      allow create: if request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous'
        && request.resource.data.authorId == request.auth.uid;

      // 3) 수정: 
      allow update: if 
        // 좋아요만 변경: 인증된(익명 제외) 사용자만 가능
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount']) 
          && request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous')
        // 그 외 필드 수정: 작성자만 가능
        || (request.auth != null && resource.data.authorId == request.auth.uid);

      // 4) 삭제: 본인 글만 삭제 가능
      allow delete: if request.auth != null
        && resource.data.authorId == request.auth.uid;
    }
  }
}
