
{
  "entities": {
    "Article": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Article",
      "type": "object",
      "description": "Represents an article or post in the oob application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Article entity, auto-generated by Firestore."
        },
        "authorUsername": {
          "type": "string",
          "description": "The pen name of the anonymous author."
        },
        "slug": {
            "type": "string",
            "description": "URL-friendly version of the title."
        },
        "title": {
          "type": "string",
          "description": "Title of the article."
        },
        "content": {
          "type": "string",
          "description": "Full content of the article."
        },
        "summary": {
          "type": "string",
          "description": "Brief summary or excerpt of the article."
        },
        "createdAt": {
          "type": "string",
          "description": "Date and time the article was published (Firestore server timestamp).",
          "format": "date-time"
        },
        "imageId": {
            "type": "string",
            "description": "ID for the article's hero image."
        },
        "tags": {
          "type": "array",
          "description": "Keywords associated with the article for search.",
          "items": {
            "type": "string"
          }
        },
        "likeCount": {
          "type": "number",
          "description": "Number of likes the article has received."
        }
      },
      "required": [
        "authorUsername",
        "title",
        "slug",
        "content",
        "summary",
        "createdAt",
        "likeCount",
        "imageId"
      ]
    },
    "UserProfile": {
        "title": "User Profile",
        "description": "Represents a user's profile information.",
        "type": "object",
        "properties": {
            "id": { "type": "string", "description": "The user's unique ID from Firebase Auth." },
            "username": { "type": "string", "description": "The user's display name." },
            "email": { "type": "string", "format": "email", "description": "The user's email address." },
            "bio": { "type": "string", "description": "A short biography of the user." },
            "readingList": {
                "type": "array",
                "description": "A list of article IDs that the user has saved.",
                "items": { "type": "string" }
            },
            "readingHistory": {
                "type": "array",
                "description": "A list of article IDs that the user has read.",
                "items": { "type": "string" }
            }
        },
        "required": ["id", "username", "email"]
    }
  },
  "auth": {
    "providers": ["email", "google"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/articles/{articleId}",
        "definition": {
          "entityName": "Article",
          "schema": {
            "$ref": "#/entities/Article"
          },
          "description": "Stores article data. Open to public for reading and creation."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/entities/UserProfile"
          },
          "description": "Stores user profile information. Users can read/write their own profile."
        }
      }
    ]
  }
}
